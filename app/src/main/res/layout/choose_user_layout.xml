<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/chooseUser"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/userChooseCardView"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="#EDEDED"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circularImageView"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/lana" />

            <TextView
                android:id="@+id/chooseUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="userName"
                android:textColor="@color/black"
                android:textSize="12sp"

                app:layout_constraintBottom_toTopOf="@+id/chooseUserEmail"
                app:layout_constraintStart_toEndOf="@+id/circularImageView"
                app:layout_constraintTop_toTopOf="@+id/circularImageView" />

            <TextView
                android:id="@+id/chooseUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="userEmail"
                android:textColor="@color/black"
                android:textSize="12sp"

                app:layout_constraintBottom_toBottomOf="@+id/circularImageView"
                app:layout_constraintStart_toEndOf="@+id/circularImageView"
                app:layout_constraintTop_toTopOf="@+id/circularImageView" />

            <TextView
                android:id="@+id/chooseUserAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="userAccount"
                android:textColor="@color/black"
                android:textSize="12sp"

                app:layout_constraintBottom_toBottomOf="@+id/circularImageView"
                app:layout_constraintStart_toEndOf="@+id/circularImageView"
                app:layout_constraintTop_toBottomOf="@+id/chooseUserEmail" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>